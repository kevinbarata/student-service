<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.task.dao.UserSessionDao">

    <insert id="add" parameterType="com.project.task.dto.UserSessionDto" useGeneratedKeys="true" keyProperty="id">
        insert into task.user_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="token != null and token != ''">token,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="token != null and token != ''">#{token},</if>
        </trim>
    </insert>

    <select id="validateSession" resultType="com.project.task.dto.UserSessionDto" parameterType="com.project.task.dto.UserSessionDto">
        SELECT  id as id,
        user_id as userId,
        token as token,
        create_time as createTime,
        update_time as updateTime
        FROM task.user_session
        <where>
            1=1
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>

        </where>
        order by id desc
        limit 1
    </select>

    <delete id="killSession" parameterType="com.project.task.dto.UserSessionDto">
        DELETE FROM task.user_session WHERE user_id = #{userId} and token = #{token}
    </delete>

    <select id="isValidToken" resultType="java.lang.Integer" parameterType="com.project.task.dto.UserSessionDto">
        SELECT  count(id)
        FROM task.user_session
        <where>
            1=1
            <if test="token != null and token != ''">
                and token = #{token}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>

        </where>
        order by id desc
    </select>

</mapper>
